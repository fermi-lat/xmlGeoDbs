  </axisPos>
</stackX>



<stackX name="sideTileRowR3" >
  <axisPos volume="sideTileR3">
    <idField name="fCol" value="0" />
    <idField name="fTileSeg" value="0" />
  </axisPos>
</stackX>

<!-- Do same for sides 1 and 4 
