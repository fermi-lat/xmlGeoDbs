    <idField name="fTileSeg" value="0" />
  </axisPos>
  <axisPos volume="sideTileR1Mid" gapREF="sideHorizontalGap" >
    <idField name="fCol" value="3" />
    <idField name="fTileSeg" value="0" />
  </axisPos>
  <axisPos volume="sideTileR1EdgeGreater" gapREF="sideHorizontalGap" >
