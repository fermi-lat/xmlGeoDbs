     materialREF="ribbonMat"
     sensitive="posHit"
     detectorTypeREF="eDTypeACDRibbon" />

<box name="xRibbonTopCent"
     XREF="ribbonWidth"
     YREF="xRibbonTopCent_l"
     ZREF="ribbonThickness"
     materialREF="ribbonMat"
     sensitive="posHit"
     detectorTypeREF="eDTypeACDRibbon" />

<box name="xRibbonTopVertNear"
