<!-- Extra boxes located adjacent to bottom (outer edge) of top tiles in 
     rows 0 and 4 to simulate a bent tile.                            -->
<box name="topTileCentBent"
     XREF="topTileXCentral_lOp"
     YREF="tileThicknessOp"
     ZREF="topTileBentZOp"
     materialREF="tileMat"
