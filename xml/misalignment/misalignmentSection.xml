              ZREF="ribbonSide_dz">
         <idField name="fLATObjects" valueREF="eLATACD" />
         <idField name="fACDFace" valueREF="eACDYPosFace" />
         <idField name="fACDCmp" valueREF="eACDRibbon" />
         <idField name="fMeasure" valueREF="eMeasureY" />

      </posXYZ>

