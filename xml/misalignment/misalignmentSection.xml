              YREF="tower0_yCoord" 
              ZREF="towers_dz" >
        <idField name="fLATObjects"  valueREF="eLATTowers" />
        <idField name="fTowerX" value="0" />
        <idField name="fTowerY" value="0" />
      </posXYZ>

      <posXYZ volume="oneTower"
