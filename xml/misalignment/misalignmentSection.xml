              ZREF="towers_dz" >
        <idField name="fLATObjects" valueREF="eLATTowers" />
        <idField name="fTowerX" value="1" />
        <idField name="fTowerY" value="2" />
      </posXYZ>

      <posXYZ volume="oneTower"
              XREF="tower7_xCoord"
              YREF="tower7_yCoord" 
              ZREF="towers_dz" >
        <idField name="fLATObjects" valueREF="eLATTowers" />
        <idField name="fTowerX" value="1" />
        <idField name="fTowerY" value="3" />
      </posXYZ>

      <posXYZ volume="oneTower"
