<!-- Medium top tile -->
<box name="topTileACDM"
XREF="ACDTileMHeight"
YREF="ACDTileMTrans"
ZREF="tileThickness"
materialREF="tileMat"
sensitive="posHit"
detectorTypeREF="eDTypeACDTile"/>

<!-- medium tiles destined for X-sides -->
<box name="sideTileXACDM"
XREF="tileThickness"
YREF="ACDTileMTrans"
ZREF="ACDTileMHeight"
materialREF="tileMat"
sensitive="posHit"
detectorTypeREF="eDTypeACDTile"/>

<!-- medium tiles destined for Y-sides -->
<box name="sideTileYACDM"
XREF="ACDTileMTrans"
YREF="tileThickness"
ZREF="ACDTileMHeight"
materialREF="tileMat"
sensitive="posHit"
detectorTypeREF="eDTypeACDTile"/>

<!-- small tiles destined for X-sides -->
<box name="sideTileXACDS"
XREF="tileThickness"
YREF="ACDTileSTrans"
ZREF="ACDTileSHeight"
materialREF="tileMat"
sensitive="posHit"
detectorTypeREF="eDTypeACDTile"/>

